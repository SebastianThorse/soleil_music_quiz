// src/pages/quiz/[id].astro
import Layout from '../../layouts/Layout.astro';
import { db } from '../../lib/db';
import {
  quizzes,
  songSubmissions,
  quizParticipants,
  quizAdmins,
  user as userTable,
} from '../../lib/db/schema';
import { eq, and, sql } from 'drizzle-orm';

const { user } = Astro.locals;
const { id } = Astro.params;

// Redirect if not logged in
if (!user) {
  return Astro.redirect(`/login?redirect=/quiz/${id}`);
}

// Get quiz details
const [quiz] = await db
  .select()
  .from(quizzes)
  .where(eq(quizzes.id, parseInt(id!)))
  .limit(1);

if (!quiz) {
  return Astro.redirect('/');
}

// Check if user is admin
const [isAdmin] = await db
  .select()
  .from(quizAdmins)
  .where(and(eq(quizAdmins.quizId, quiz.id), eq(quizAdmins.userId, user.id)))
  .limit(1);

// Check if user has already submitted
const [userSubmission] = await db
  .select()
  .from(songSubmissions)
  .where(
    and(
      eq(songSubmissions.quizId, quiz.id),
      eq(songSubmissions.userId, user.id),
    ),
  )
  .limit(1);

// Check if user is a participant
const [isParticipant] = await db
  .select()
  .from(quizParticipants)
  .where(
    and(
      eq(quizParticipants.quizId, quiz.id),
      eq(quizParticipants.userId, user.id),
    ),
  )
  .limit(1);

// Get all submissions with user info
const submissions = await db
  .select({
    id: songSubmissions.id,
    songLink: songSubmissions.songLink,
    songTitle: songSubmissions.songTitle,
    artist: songSubmissions.artist,
    submittedAt: songSubmissions.submittedAt,
    userName: userTable.name,
    userEmail: userTable.email,
  })
  .from(songSubmissions)
  .innerJoin(userTable, eq(songSubmissions.userId, userTable.id))
  .where(eq(songSubmissions.quizId, quiz.id));

// Get participant count
const [participantCount] = await db
  .select({ count: sql<number>`count(*)` })
  .from(quizParticipants)
  .where(eq(quizParticipants.quizId, quiz.id));

let error = '';
let success = '';

// Handle POST requests (join quiz or submit song)
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const action = formData.get('action')?.toString();

    if (action === 'join') {
      // Join the quiz
      if (!isParticipant) {
        await db.insert(quizParticipants).values({
          quizId: quiz.id,
          userId: user.id,
        });
        success = 'Du har gått med i quizet!';
        return Astro.redirect(`/quiz/${id}`);
      }
    } else if (action === 'submit_song') {
      const songLink = formData.get('song_link')?.toString();
      const songTitle = formData.get('song_title')?.toString();
      const artist = formData.get('artist')?.toString();

      if (!songLink || songLink.trim() === '') {
        error = 'Låtlänk krävs';
      } else if (!isParticipant) {
        error = 'Du måste gå med i quizet först';
      } else if (userSubmission) {
        error = 'Du har redan skickat in en låt';
      } else if (quiz.status !== 'open') {
        error = 'Quizet accepterar inte längre låtinlämningar';
      } else {
        // Extract Spotify ID from link if it's a Spotify URL
        let cleanLink = songLink.trim();

        await db.insert(songSubmissions).values({
          quizId: quiz.id,
          userId: user.id,
          songLink: cleanLink,
          songTitle: songTitle?.trim() || null,
          artist: artist?.trim() || null,
        });

        success = 'Din låt har skickats in!';
        return Astro.redirect(`/quiz/${id}`);
      }
    } else if (action === 'change_status') {
      const newStatus = formData.get('new_status')?.toString();

      if (!isAdmin) {
        error = 'Endast administratörer kan ändra quizstatus';
      } else if (
        newStatus &&
        ['open', 'guessing', 'completed'].includes(newStatus)
      ) {
        await db
          .update(quizzes)
          .set({
            status: newStatus as 'open' | 'guessing' | 'completed',
            closedAt: newStatus !== 'open' ? new Date() : null,
          })
          .where(eq(quizzes.id, quiz.id));

        return Astro.redirect(`/quiz/${id}`);
      }
    }
  } catch (e: any) {
    console.error('Error:', e);
    error = 'Ett fel uppstod. Försök igen.';
  }
}

const getStatusText = (status: string) => {
  switch (status) {
    case 'open':
      return 'Öppen för låtinlämning';
    case 'guessing':
      return 'Gissningsfas';
    case 'completed':
      return 'Avslutad';
    default:
      return status;
  }
};

const getStatusColor = (status: string) => {
  switch (status) {
    case 'open':
      return '#10b981';
    case 'guessing':
      return '#f59e0b';
    case 'completed':
      return '#6b7280';
    default:
      return '#6b7280';
  }
};
---

<Layout>
  <div class="container">
    <div class="header">
      <a href="/" class="back-link">← Tillbaka till startsidan</a>
      <div class="title-row">
        <h1>{quiz.name}</h1>
        <span
          class="status-badge"
          style={`background-color: ${getStatusColor(quiz.status)}`}
        >
          {getStatusText(quiz.status)}
        </span>
      </div>
      {quiz.description && <p class="description">{quiz.description}</p>}

      <div class="quiz-stats">
        <div class="stat-item">
          <span class="stat-value">{participantCount.count}</span>
          <span class="stat-label">Deltagare</span>
        </div>
        <div class="stat-item">
          <span class="stat-value">{submissions.length}</span>
          <span class="stat-label">Låtar inlämnade</span>
        </div>
      </div>
    </div>

    {error && <div class="error-message">{error}</div>}

    {success && <div class="success-message">{success}</div>}

    {/* OPEN STAGE - Join and Submit Songs */}
    {
      quiz.status === 'open' && (
        <div class="stage-container">
          <h2>Skicka in din låt</h2>

          {!isParticipant ? (
            <div class="join-card">
              <p>Gå med i quizet för att skicka in din låt!</p>
              <form method="POST">
                <input type="hidden" name="action" value="join" />
                <button type="submit" class="btn-primary">
                  Gå med i quizet
                </button>
              </form>
            </div>
          ) : userSubmission ? (
            <div class="submission-card submitted">
              <h3>✓ Din inlämning</h3>
              <div class="submission-details">
                {userSubmission.songTitle && (
                  <p class="song-title">{userSubmission.songTitle}</p>
                )}
                {userSubmission.artist && (
                  <p class="artist">{userSubmission.artist}</p>
                )}
                <a
                  href={userSubmission.songLink}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="song-link"
                >
                  Öppna låt →
                </a>
              </div>
            </div>
          ) : (
            <form method="POST" class="submission-form">
              <input type="hidden" name="action" value="submit_song" />

              <div class="form-group">
                <label for="song_link" class="form-label">
                  Spotify-länk <span class="required">*</span>
                </label>
                <input
                  type="url"
                  id="song_link"
                  name="song_link"
                  class="form-input"
                  placeholder="https://open.spotify.com/track/..."
                  required
                />
                <p class="form-help">
                  Klistra in länken till låten från Spotify
                </p>
              </div>

              <div class="form-group">
                <label for="song_title" class="form-label">
                  Låttitel (valfritt)
                </label>
                <input
                  type="text"
                  id="song_title"
                  name="song_title"
                  class="form-input"
                  placeholder="t.ex. Bohemian Rhapsody"
                />
              </div>

              <div class="form-group">
                <label for="artist" class="form-label">
                  Artist (valfritt)
                </label>
                <input
                  type="text"
                  id="artist"
                  name="artist"
                  class="form-input"
                  placeholder="t.ex. Queen"
                />
              </div>

              <button type="submit" class="btn-primary">
                Skicka in låt
              </button>
            </form>
          )}

          {/* Admin controls */}
          {isAdmin && submissions.length > 0 && (
            <div class="admin-section">
              <h3>Administratör</h3>
              <p>
                Det finns {submissions.length} inlämnade{' '}
                {submissions.length === 1 ? 'låt' : 'låtar'}.
              </p>
              <form method="POST">
                <input type="hidden" name="action" value="change_status" />
                <input type="hidden" name="new_status" value="guessing" />
                <button type="submit" class="btn-warning">
                  Stäng inlämning och starta gissning
                </button>
              </form>
            </div>
          )}

          {/* Show submissions to admin */}
          {isAdmin && submissions.length > 0 && (
            <div class="submissions-list">
              <h3>Inlämnade låtar ({submissions.length})</h3>
              <div class="submission-grid">
                {submissions.map((sub) => (
                  <div class="submission-item">
                    <p class="submitter">{sub.userName}</p>
                    {/* {sub.songTitle && (
                      <p class="song-info">
                        <strong>{sub.songTitle}</strong>
                      </p>
                    )}
                    {sub.artist && <p class="song-info">{sub.artist}</p>}
                    <a
                      href={sub.songLink}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="link"
                    >
                      Öppna →
                    </a> */}
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>
      )
    }

    {/* GUESSING STAGE - Show info and link to guessing page */}
    {
      quiz.status === 'guessing' && (
        <div class="stage-container">
          <h2>Dags att gissa!</h2>
          <div class="guessing-info-card">
            <p class="info-text">
              Alla har skickat in sina låtar. Nu är det dags att gissa vem som
              valde vilken låt!
            </p>

            <div class="guessing-stats">
              <div class="stat-box">
                <span class="big-number">{submissions.length}</span>
                <span class="stat-text">låtar att gissa på</span>
              </div>
              <div class="stat-box">
                <span class="big-number">{participantCount.count}</span>
                <span class="stat-text">deltagare</span>
              </div>
            </div>

            <a href={`/quiz/${id}/guess`} class="btn-primary btn-large">
              Börja gissa →
            </a>
          </div>

          {/* Admin controls */}
          {isAdmin && (
            <div class="admin-section">
              <h3>Administratör</h3>
              <form method="POST" style="display: flex; gap: 1rem;">
                <input type="hidden" name="action" value="change_status" />
                <button
                  type="submit"
                  name="new_status"
                  value="open"
                  class="btn-secondary"
                >
                  ← Återgå till inlämning
                </button>
                <button
                  type="submit"
                  name="new_status"
                  value="completed"
                  class="btn-warning"
                >
                  Avsluta quiz
                </button>
              </form>
            </div>
          )}
        </div>
      )
    }

    {/* COMPLETED STAGE - Show link to results */}
    {
      quiz.status === 'completed' && (
        <div class="stage-container">
          <h2>Quizet är avslutat</h2>
          <div class="completed-card">
            <p>
              Detta quiz är nu avslutat. Se resultaten för att se vem som
              gissade rätt!
            </p>
            <a href={`/quiz/${id}/results`} class="btn-primary">
              Se resultat →
            </a>
          </div>
        </div>
      )
    }
  </div>
</Layout>

